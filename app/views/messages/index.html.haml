    .wrapper
      %p.announce
        グループを作成しました
      .chat-side
        .side-header
          .side-header__box
            %p.side-header__box--user-name
              Yoshiki
              %ul.side-header__box--btn
                %li.side-header__box--btn-new
                  =fa_icon 'fas edit'
                %li.side-header__box--btn-edit
                  =fa_icon 'fas cog'
                
        .talkrooms
          %a{}
            .talkroom
              %p.talkroom__room-name
                sample-room
              %p.talkroom__new-message
                Hello!

      .chat-main
        .main-header
          .main-header__left-box
            %h2.main-header__left-box--room-name
              sample-room
            %ul.main-header__left-box--menber-list
              member:Yoshiki
          .main-header__edit-btn
            Edit

        .messages
          .message
            .message__info
              %p.message__info--talker
                Yoshiki
              %p.message__info--date
                2019/10/04
              %p.message__info--text
                Hello!
        .form
          %form.new-message{method: "post", action: "/"}
            .input-box
              %input.input-box__text{type: "text", placeholder: "type a message", name: "text"}
              %label.imagefield
                %label{for: "image-icon"}
                  =fa_icon 'fas image'
                %input#image-icon{type: "file", style: "display:none;"}
            %input.submit-btn{type: "submit", value: "Send", name: "commit"}
