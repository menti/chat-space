.wrapper
  -# = render 'shared/side_bar'
  .chat-side
    .side-header
      .side-header__box
        %h3.side-header__box--user-name
          = current_user.name
        %ul.side-header__box--btn
          %li.side-header__box--btn-new
            = link_to new_group_path do
              =fa_icon 'fas edit', class: 'icon'
          %li.side-header__box--btn-edit
            = link_to edit_user_path(current_user) do
              = fa_icon 'fas cog', class: 'icon'
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              メッセージはまだありません。
            
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box--room-name
          sample-room
        %ul.main-header__left-box--menber-list
          member:Yoshiki
      .main-header__edit-btn
        Edit

    .messages
      .message
        .message__info
          %p.message__info--talker
            Yoshiki
          %p.message__info--date
            2019/10/04
          %p.message__info--text
            Hello!
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'

